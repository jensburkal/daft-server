<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">

    <!-- Output to standard out of the application server   -->
    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%t] %-5p %C{1}.%M (%L) - %d{HH:mm:ss,SSS} %m%n"/>
        </layout>
    </appender>

    <appender name="OTEC_ENTERPRISE_LOG" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="append" value="true"/>
        <param name="file" value="C:/otec/logs/otec_enterprise.log"/>
	<param name="encoding" value="UTF-8"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%t] %-5p %C{1}.%M (%L) - %d{HH:mm:ss,SSS} %m%n"/>
        </layout>
    </appender>

    <appender name="CANTO_LOG" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="append" value="true"/>
        <param name="file" value="C:/otec/logs/canto.log"/>
	<param name="encoding" value="UTF-8"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%t] %-5p %C{1}.%M (%L) - %d{HH:mm:ss,SSS} %m%n"/>
        </layout>
    </appender>

    <logger name="com.otecsolutions" additivity="false">
       <level value="DEBUG"/>
       <appender-ref ref="OTEC_ENTERPRISE_LOG"/>
    </logger>
    <logger name="no.eniro.repository" additivity="false">
       <level value="DEBUG"/>
       <appender-ref ref="OTEC_ENTERPRISE_LOG"/>
    </logger>
    <logger name="com.canto" additivity="false">
       <level value="WARN"/>
       <appender-ref ref="CANTO_LOG"/>
    </logger>
    <root>
        <priority value="WARN"/>
        <appender-ref ref="CONSOLE"/>
    </root>
</log4j:configuration>
